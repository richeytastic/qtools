        <Platform name="Linux">
            <Archive>patch-linux-x64.zip</Archive>
            <Manifest>
                <File>bin/cliniface</File>
            </Manifest>
        </Platform>
        <Platform name="Windows">
            <Archive>patch-win32-x64.zip</Archive>
            <Manifest>
                <File>bin/cliniface.exe</File>
            </Manifest>
        </Platform>
    </Patch>

</PatchList>
